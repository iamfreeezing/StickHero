<AnchorPane prefHeight="560.0" prefWidth="270.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.stickhero.Homepage">
   <children>
      <ImageView fitHeight="560.0" fitWidth="275.0" layoutX="-2.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@homepage.jpg" />
         </image>
      </ImageView>
      <Text fill="WHITE" layoutX="126.0" layoutY="192.0" strokeType="OUTSIDE" strokeWidth="0.0" text="HERO">
         <font>
            <Font name="Cambria" size="48.0" />
         </font>
      </Text>
      <Circle fill="#decaed" layoutX="137.0" layoutY="347.0" radius="44.0" stroke="#dfd9ff" strokeType="INSIDE" />
      <Button fx:id="playbutton" blendMode="DARKEN" layoutX="103.0" layoutY="327.0" mnemonicParsing="false" onAction="#onPlayButtonClick" text="PLAY" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <Text fill="WHITE" layoutX="30.0" layoutY="148.0" strokeType="OUTSIDE" strokeWidth="0.0" text="STICK">
         <font>
            <Font name="Cambria" size="48.0" />
         </font>
      </Text>
      <Button fx:id="Ads" layoutX="22.0" layoutY="509.0" mnemonicParsing="false" onAction="#adsButton" text="No Ads" />
      <Button fx:id="Sound" layoutX="91.0" layoutY="509.0" mnemonicParsing="false" onAction="#soundButton" text="Sound On" />
